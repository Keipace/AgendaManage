<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/target_parent_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg_addtarget">

    <!--名称 name-->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/target_name_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:hint="名称"
        android:inputType="text"
        android:maxLength="12"
        android:singleLine="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:met_floatingLabel="normal"
        app:met_maxCharacters="10" />

    <!--描述 decoration-->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/target_decoration_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="描述(可选)"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:minLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/target_name_editText"
        app:met_floatingLabel="normal"
        app:met_maxCharacters="30" />
</androidx.constraintlayout.widget.ConstraintLayout>