<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/item_fragmentTarget_swipeLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <!-- Bottom View Start-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_fragmentTarget_bottomWrapper"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/itemPlanNode_delete_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/delete"
                android:background="#ff0000"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/itemPlanNode_edit_imageView"/>
            <ImageView
                android:id="@+id/itemPlanNode_edit_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit"
                android:background="#ffa500"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/itemPlanNode_delete_imageView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Bottom View End-->

        <!-- Surface View Start -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:id="@+id/itemPlanNode_container">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/itemPlanNode_title_textView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/itemPlanNode_startTime_textView"
                android:text="名称"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large_size"
                android:singleLine="true"
                android:ellipsize="end"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemPlanNode_childrenCountTitle_textView"
                app:layout_constraintLeft_toLeftOf="@id/itemPlanNode_title_textView"
                app:layout_constraintTop_toBottomOf="@id/itemPlanNode_title_textView"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="子节点数量:"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemPlanNode_childrenCount_textView"
                app:layout_constraintTop_toTopOf="@id/itemPlanNode_childrenCountTitle_textView"
                app:layout_constraintBottom_toBottomOf="@id/itemPlanNode_childrenCountTitle_textView"
                app:layout_constraintLeft_toRightOf="@id/itemPlanNode_childrenCountTitle_textView"
                android:layout_marginLeft="5dp"
                android:text="数量"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemPlanNode_startTime_textView"
                app:layout_constraintTop_toTopOf="@id/itemPlanNode_title_textView"
                app:layout_constraintBottom_toBottomOf="@id/itemPlanNode_title_textView"
                app:layout_constraintRight_toLeftOf="@id/itemPlanNode_split_textView"
                android:layout_marginRight="5dp"
                android:text="开始日期"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemPlanNode_split_textView"
                app:layout_constraintTop_toTopOf="@id/itemPlanNode_startTime_textView"
                app:layout_constraintBottom_toBottomOf="@id/itemPlanNode_startTime_textView"
                app:layout_constraintRight_toLeftOf="@id/itemPlanNode_endTime_textView"
                android:layout_marginRight="5dp"
                android:text="—"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemPlanNode_endTime_textView"
                app:layout_constraintTop_toTopOf="@id/itemPlanNode_split_textView"
                app:layout_constraintBottom_toBottomOf="@id/itemPlanNode_split_textView"
                app:layout_constraintRight_toRightOf="parent"
                android:text="结束日期"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemPlanNode_duringDay_textView"
                app:layout_constraintLeft_toLeftOf="@id/itemPlanNode_startTime_textView"
                app:layout_constraintRight_toLeftOf="@id/itemPlanNode_duringDayTitle_textView"
                app:layout_constraintTop_toTopOf="@id/itemPlanNode_childrenCount_textView"
                app:layout_constraintBottom_toBottomOf="@id/itemPlanNode_childrenCount_textView"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginRight="5dp"
                android:text="n"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemPlanNode_duringDayTitle_textView"
                app:layout_constraintTop_toTopOf="@id/itemPlanNode_duringDay_textView"
                app:layout_constraintBottom_toBottomOf="@id/itemPlanNode_duringDay_textView"
                app:layout_constraintLeft_toRightOf="@id/itemPlanNode_duringDay_textView"
                app:layout_constraintRight_toRightOf="@id/itemPlanNode_endTime_textView"
                android:layout_marginLeft="5dp"
                android:text="天"
                android:textColor="@color/black"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Surface View End -->
    </com.daimajia.swipe.SwipeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>