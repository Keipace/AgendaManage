<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_weekTimeCourse_rootView_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_weekTimeCourse_courseName_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="课程名"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_weekTimeCourse_edit_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_weekTimeCourse_address_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_weekTimeCourse_address_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/null_stroke"
        android:gravity="center"
        android:text="地点"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_weekTimeCourse_edit_btn"
        app:layout_constraintLeft_toRightOf="@id/item_weekTimeCourse_courseName_tv"
        app:layout_constraintRight_toLeftOf="@id/item_weekTimeCourse_edit_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/item_weekTimeCourse_edit_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:text="编辑"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/item_weekTimeCourse_address_tv"
        app:layout_constraintRight_toLeftOf="@id/item_weekTimeCourse_delete_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/item_weekTimeCourse_delete_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:text="删除"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/item_weekTimeCourse_edit_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>