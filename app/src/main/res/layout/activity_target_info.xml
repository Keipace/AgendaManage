<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="80dp"
    android:paddingHorizontal="30dp">
    <ImageView
        android:id="@+id/target_back_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/target_info_layout"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/back"/>
    <com.privateproject.agendamanage.shadow.ShadowContainer
        android:id="@+id/target_info_layout"
        app:layout_constraintTop_toBottomOf="@id/target_back_imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/targetInfo_back_Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:containerDeltaLength="10dp"
        app:containerShadowRadius="10dp"
        app:containerShadowColor="#f00"
        app:enable="true"
        android:background="@drawable/bg_info">
        <!--    #   id 标识
            name 名称
            #   decoration 描述
            timeNeed 预估所需时间
            timePlanOver 期待完成时间
            timeDeadLine 最晚完成时间
            timeRealOver 实际完成时间
            #   importance 重要性
            timePreDo 预实施时间-->

        <!--   name 名称     -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/target_name_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:background="@drawable/bg_top"
            android:padding="20dp"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/targetInfo_name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/iv_calendar"
                android:layout_marginBottom="20dp"
                android:text="这是目标名称"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorWhite" />
            <!--预实施时间-->
            <ImageView
                android:id="@+id/iv_calendar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/calendar"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:id="@+id/targetInfo_timePreDo_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预实施时间"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_calendar"/>
            <TextView
                android:id="@+id/fenge_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="@color/colorWhite"
                app:layout_constraintLeft_toRightOf="@id/targetInfo_timePreDo_textView"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/targetInfo_timePlanOver_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期待结束时间"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/fenge_textView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/target_content_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_bottom"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/target_name_layout">

            <RadioGroup
                android:id="@+id/targetInfo_importance_radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/targetInfo_high_radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="高"
                    android:textSize="@dimen/font_size" />

                <RadioButton
                    android:id="@+id/targetInfo_middle_radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="中"
                    android:textSize="@dimen/font_size" />

                <RadioButton
                    android:id="@+id/targetInfo_low_radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="低"
                    android:textSize="@dimen/font_size" />
            </RadioGroup>

            <!--decoration 描述-->
            <TextView
                android:id="@+id/targetInfo_decoration_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="描  述"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/targetInfo_importance_radioGroup" />
            <TextView
                android:id="@+id/targetInfo_decoration_content_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="描述内容"
                android:textColor="@color/gray"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/targetInfo_decoration_textView" />


            <EditText
                android:id="@+id/targetInfo_decoration_editView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="描述还未填写"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:minLines="1"
                android:padding="@dimen/editText_padding"
                android:selectAllOnFocus="true"
                android:singleLine="false"
                android:textSize="@dimen/font_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/targetInfo_decoration_content_textView" />
            <!--timeNeed 预估所需时间-->
            <TextView
                android:id="@+id/targetInfo_timeNeed_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="预估所需时间（小时）："
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/targetInfo_decoration_editView" />

            <EditText
                android:id="@+id/targetInfo_timeNeed_editView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="还未填写"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:padding="@dimen/editText_padding"
                android:textIsSelectable="true"
                android:textSize="@dimen/font_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/targetInfo_timeNeed_textView" />
            <!--timePlanOver 期待完成时间-->
            <!--timeDeadLine 最晚完成时间-->
            <TextView
                android:id="@+id/targetInfo_timeDeadLine_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="最晚完成时间："
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/targetInfo_timeNeed_textView" />

            <EditText
                android:id="@+id/targetInfo_timeDeadLine_editView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="还未填写"
                android:inputType="date"
                android:padding="@dimen/editText_padding"
                android:textIsSelectable="true"
                android:textSize="@dimen/font_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/targetInfo_timeDeadLine_textView" />
            <!--timePreDo 预实施时间-->
            <!--timeRealOver 实际完成时间-->
            <TextView
                android:id="@+id/targetInfo_timeRealOver_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="实际完成时间："
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/targetInfo_timeDeadLine_textView" />

            <EditText
                android:id="@+id/targetInfo_timeRealOver_editView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="还未填写"
                android:inputType="date"
                android:padding="@dimen/editText_padding"
                android:textIsSelectable="true"
                android:textSize="@dimen/font_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/targetInfo_timeRealOver_textView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.privateproject.agendamanage.shadow.ShadowContainer>
    <Button
        android:id="@+id/targetInfo_back_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/target_info_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        android:text="返回"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/constraintlayout_goalbg"/>
    <Button
        android:id="@+id/targetInfo_edit_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/target_info_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="16sp"
        android:text="编辑"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/constraintlayout_goalbg"/>
</androidx.constraintlayout.widget.ConstraintLayout>