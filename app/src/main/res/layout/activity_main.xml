<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mianActivity_container_contrainlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mianActivity_qingdan_btn">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/mianActivity_qingdan_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mianActivity_richeng_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="清单"
        android:textSize="@dimen/font_size"
        android:onClick="onClick"
        android:drawableTop="@drawable/qingdan_normal"/>
    <Button
        android:id="@+id/mianActivity_richeng_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/mianActivity_qingdan_btn"
        app:layout_constraintEnd_toStartOf="@id/mianActivity_tongji_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="日程"
        android:onClick="onClick"
        android:textSize="@dimen/font_size"
        android:drawableTop="@drawable/qingdan_normal"/>
    <Button
        android:id="@+id/mianActivity_tongji_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/mianActivity_richeng_btn"
        app:layout_constraintEnd_toStartOf="@id/mianActivity_me_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="统计"
        android:textSize="@dimen/font_size"
        android:drawableTop="@drawable/qingdan_normal"/>
    <Button
        android:id="@+id/mianActivity_me_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/mianActivity_tongji_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="我"
        android:textSize="@dimen/font_size"
        android:drawableTop="@drawable/qingdan_normal"/>





</androidx.constraintlayout.widget.ConstraintLayout>