<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_weekTimeEditChoise_layout"
    android:padding="20dp">

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/item_weekTimeEditChoise_recyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent">
</androidx.recyclerview.widget.RecyclerView>
    <Button
        android:id="@+id/item_weekTimeEditChoise_add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添 加"
        android:textSize="20sp"
        android:background="@drawable/null_stroke"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_weekTimeEditChoise_recyclerView"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>