    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/iv_line"
        android:scaleType="fitXY"
        android:layout_width="20dp"
        android:layout_height="80dp"
        android:src="@drawable/verticalline"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemMain_content_dayTarget_targetName"
        app:layout_constraintLeft_toRightOf="@id/iv_line"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:text="计划名称"
        android:maxLines="1"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_decoration"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/itemMain_content_dayTarget_targetName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:text="这是描述"
        />

    <!--<TextView
