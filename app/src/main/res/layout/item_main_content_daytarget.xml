        app:layout_constraintTop_toTopOf="@id/tv_decoration"
        android:text="完成1/5次"/>-->

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/dayTarget_delete"
        app:layout_constraintTop_toTopOf="@id/iv_line"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/dayTarget_delete"
        app:layout_constraintBottom_toBottomOf="@id/tv_decoration"
        android:textSize="16sp"
        android:text="还剩10天"
        android:textStyle="bold"
        android:textColor="@color/molired"/>


