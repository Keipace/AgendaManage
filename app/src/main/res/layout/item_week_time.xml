<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemWeekTime_rootView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemWeekTime_bottom_textView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/itemWeekTime_cell_btn"
        app:layout_constraintRight_toRightOf="@id/itemWeekTime_cell_btn"
        app:layout_constraintTop_toBottomOf="@id/itemWeekTime_cell_btn" />
    <TextView
        android:id="@+id/itemWeekTime_right_textView"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/divider"
        app:layout_constraintBottom_toBottomOf="@id/itemWeekTime_cell_btn"
        app:layout_constraintLeft_toRightOf="@id/itemWeekTime_cell_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemWeekTime_cell_btn" />
    <Button
        android:id="@+id/itemWeekTime_cell_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:background="#00000000"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/itemWeekTime_bottom_textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/itemWeekTime_right_textView"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>