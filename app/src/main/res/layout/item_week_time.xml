<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/itemWeekTime_rootView"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/itemWeekTime_cell_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:background="@drawable/btn_target"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/itemWeekTime_right_textView"
        app:layout_constraintBottom_toTopOf="@id/itemWeekTime_bottom_textView"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/itemWeekTime_right_textView"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/divider"
        app:layout_constraintTop_toTopOf="@id/itemWeekTime_cell_btn"
        app:layout_constraintLeft_toRightOf="@id/itemWeekTime_cell_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/itemWeekTime_cell_btn"
        />
    <TextView
        android:id="@+id/itemWeekTime_bottom_textView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/itemWeekTime_cell_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>